@model IEnumerable<QuanLyNongSan.Models.NongSan>
@{ ViewBag.Title = "TimkiemNS";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<div id="mainProduct" class="py-2">
    <div class="container">
        <div class="row my-4 main-header">
            <div class="text-center m-auto ">
                <h2 class="main-tittle mb-2 ">Kết quả tìm kiếm</h2>
            </div>
            <div class="main-header-line text-center d-flex m-auto justify-content-center">
                <span class="line-box"></span>
                <i class="fas fa-fan mx-3"></i>
                <span class="line-box"></span>
            </div>
        </div>

        @{ if (ViewBag.thongbao != null)
                        {
            <div class="alert alert-warning" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign">
                    @ViewBag.thongbao
                </span>

            </div> }
                        else
                        {
            <div class="row">
                @{ foreach (var item in Model)
                                    {
                    <div class="mainContent-item col-lg-3 col-md-4 col-sm-6 mb-3">
                        <a href="product.html">
                            <div class="card">
                                <div class="card-img">
                                    <img src="@item.HinhAnhDaiDien" class="card-img-top  img-thumbnail" alt="otDaLat">
                                    <div class="card-overlay text-center w-100">
                                        @Html.ActionLink("Xem chi tiết", "ChiTietNS", "NongSan", new { id = item.ID }, new { @class = "btn btn-success", @role = "button" })
                                    </div>
                                </div>
                                <div class="card-body text-center">
                                    <a href="#">
                                        <h5 class="card-title">@item.TenNS</h5>
                                    </a>
                                    <div class="pb-3">
                                        <span class="card-text fw-bold"><i class="fas fa-money-bill-wave"></i> 40.000đ</span>
                                    </div>
                                    <a href="thanh-toan-ngay.html" class="btn my-bg-color text-white w-100">Đặt hàng</a>
                                </div>
                            </div>
                        </a>
                    </div> } }
            </div> } }

    </div>
</div>